<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    app:cardBackgroundColor="@color/colorCellBack"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:id="@+id/smart_calendar_event_cell_start_date_wrapper"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:orientation="vertical"
        android:background="@drawable/image_bg"
        android:textAlignment="center"
        >
        <TextView
            android:id="@+id/smart_calendar_event_cell_start_date_day"
            android:textSize="22sp"
            android:textAlignment="center"
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/smart_calendar_event_cell_start_date_month"
            android:textSize="22sp"
            android:layout_marginTop="5dp"
            android:textAlignment="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <TextView
        android:id="@+id/smart_calendar_event_cell_title"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="16sp"
        android:ellipsize="marquee"
        android:layout_toEndOf="@+id/smart_calendar_event_cell_start_date_wrapper"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/smart_calendar_event_cell_start_date_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/smart_calendar_event_cell_start_date_wrapper"
        android:layout_marginTop="18sp"
        />
    <TextView
        android:id="@+id/smart_calendar_event_cell_to_wrapper"
        android:layout_toEndOf="@+id/smart_calendar_event_cell_start_date_wrapper"
        android:layout_marginTop="30dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <ImageButton
        android:id="@+id/smart_calendar_event_cell_edit"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="5dp"
        android:background="@null"
        android:src="@drawable/pencil"
        android:layout_width="20dp"
        android:layout_height="20dp" />
</RelativeLayout>