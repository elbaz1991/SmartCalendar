<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:elevation="4dp"
    android:layout_margin="0dp"
    app:cardCornerRadius="0dp"
    android:padding="4dp"
    app:cardBackgroundColor="@color/colorCellBack"
    >

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

        <TextView
            android:id="@+id/eventMonth"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:visibility="gone"
            android:textSize="23dp"
            android:textStyle="bold"
            android:fontFamily="casual"
            android:textColor="#000"
            android:shadowColor="#fefdfd"
            android:shadowRadius="2"
            android:gravity="center"
            android:alpha="0.9"
            android:clickable="false"
         />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/eventNumDay"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:textColor="@color/colorTextCell"
                    android:layout_marginTop="2dp"
                    android:layout_marginLeft="5dp"
                    />
                <TextView
                    android:id="@+id/eventNameDay"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:textColor="@color/colorTextCell"
                    android:layout_marginTop="21dp"
                    android:layout_marginLeft="5dp"
                    />




                <android.support.v7.widget.RecyclerView
                    android:id="@+id/eventListContent_recyclerView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="45dp"
                    android:layout_marginTop="2dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginBottom="3dp"

                    >

                </android.support.v7.widget.RecyclerView>

        </FrameLayout>


</LinearLayout>




</android.support.v7.widget.CardView>