<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context="fr.amu.univ.smartcalendar.ui.activities.AddEventActivity">
    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">
        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/AppTheme.PopupOverlay" >
            <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent" >
                <TextView
                    android:id="@+id/titleAddEvent"
                    style="@style/AlertDialog.AppCompat.Light"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="?attr/selectableItemBackground"
                    android:text="@string/title_activity_add_event"
                    android:gravity="center_vertical"
                    android:layout_alignParentStart="true"/>
                <TextView
                    android:id="@+id/toolbar_save"
                    style="@style/TextAppearance.Widget.AppCompat.Toolbar.Subtitle"
                    android:layout_width="30dp"
                    android:layout_height="match_parent"
                    android:background="?attr/selectableItemBackground"
                    android:drawableEnd="@drawable/ic_black_save"
                    android:gravity="center_vertical"
                    android:layout_marginEnd="10dp"
                    android:layout_alignParentEnd="true"/>
            </RelativeLayout>
        </android.support.v7.widget.Toolbar>
    </android.support.design.widget.AppBarLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >
            <EditText
                android:id="@+id/titre"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="@string/smart_calendar_event_title"
                android:inputType="textPersonName" />
            <EditText
                android:id="@+id/description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="@string/smart_calendar_event_description"
                android:minLines="4"
                android:maxLines="6"
                android:scrollbars="vertical"
                android:gravity="top"
                android:inputType="text|textMultiLine"/>
            <Switch
                android:id="@+id/journeComplete"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginStart="20dp"
                android:layout_weight="0.05"
                android:fontFamily="sans-serif"
                android:hint="@string/smart_calendar_all_day"
                android:textColor="@android:color/black"
                android:textSize="14sp"
                android:textStyle="bold" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:padding="10dp"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/dateDebut"
                    android:layout_width="40dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="10dp"
                    android:layout_weight="1"
                    android:text="@string/smart_calendar_date_label"
                    android:textColor="@android:color/black"
                    android:textStyle="bold" />
                <TextView
                    android:id="@+id/heureDebut"
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:text="@string/smart_calendar_hour"
                    android:textAlignment="center"
                    android:textColor="@android:color/black"
                    android:textStyle="bold" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:padding="10dp"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/dateFin"
                    android:layout_width="40dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="10dp"
                    android:layout_weight="1"
                    android:text="@string/smart_calendar_date_label"
                    android:textColor="@android:color/black"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/heureFin"
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"

                    android:text="@string/smart_calendar_hour"
                    android:textAlignment="center"
                    android:textColor="@android:color/black"
                    android:textStyle="bold" />
            </LinearLayout>
            <EditText
                android:id="@+id/lieuDepart"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textPersonName"
                android:hint="@string/smart_calendar_departure_place_label"
                android:onClick="onClickUpdateDeparturePosition"/>
            <EditText
                android:id="@+id/smart_calendar_destination_location"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textPersonName"
                android:hint="@string/smart_calendar_destination_place_label"
                android:onClick="onClickUpdateDestinationPosition"/>
        </LinearLayout>
    </ScrollView>

</LinearLayout>
