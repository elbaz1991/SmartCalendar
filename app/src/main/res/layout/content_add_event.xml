<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="15dp"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="fr.amu.univ.smartcalendar.ui.activities.AddEventActivity"
    tools:showIn="@layout/activity_add_event"
    android:orientation="vertical"
    android:weightSum="1">

    <EditText
        android:id="@+id/titre"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Titre"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Description"
        android:inputType="textPersonName" />

    <Switch
        android:id="@+id/journeComplete"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_weight="0.05"
        android:fontFamily="sans-serif"
        android:text="JournÃ© complete"
        android:textColor="@android:color/black"
        android:textSize="14sp"
        android:textStyle="bold" />



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:padding="10dp"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/dateDebut"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="10dp"

            android:layout_weight="1"
            android:text="date"

            android:textColor="@android:color/black"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/heureDebut"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:onClick="onClickHeureDebut"
            android:text="heure"
            android:textAlignment="center"
            android:textColor="@android:color/black"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:padding="10dp"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/dateFin"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="10dp"

            android:layout_weight="1"
            android:text="date"

            android:textColor="@android:color/black"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/heureFin"
            android:layout_width="70dp"
            android:layout_height="wrap_content"

            android:text="heure"
            android:textAlignment="center"
            android:textColor="@android:color/black"
            android:textStyle="bold" />

    </LinearLayout>

    <EditText
        android:id="@+id/lieuDepart"
        android:layout_width="357dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Lieu de depart" />

    <EditText
        android:id="@+id/lieuRdv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Lieu du RDV" />



</LinearLayout>
