<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/list_selector"
    android:orientation="horizontal"
    android:layout_marginBottom="15dp" >
    <LinearLayout
        android:id="@+id/smart_calendar_traffic_jam_desc_wrapper"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        >
        <TextView
            android:id="@+id/smart_calendar_traffic_jam_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:textSize="18sp" />
        <TextView
            android:id="@+id/smart_calendar_traffic_ride_duration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:textSize="16sp"/>
        <TextView
            android:id="@+id/smart_calendar_traffic_distance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:textSize="14sp"
            />
    </LinearLayout>
    <ImageButton
            android:id="@+id/smart_calendar_traffic_jam_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="60dp"
            android:minHeight="60dp"
            android:background="@drawable/image_bg"
            android:src="@drawable/car"
            android:layout_margin="4dp"
            android:layout_alignParentEnd="true"
        />

</RelativeLayout>