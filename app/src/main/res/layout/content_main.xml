<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="fr.amu.univ.smartcalendar.ui.activities.MainActivity"
    tools:showIn="@layout/app_bar_main">

<!-- app:compactCalendarTargetHeight="250dp" -->

    <com.github.sundeepk.compactcalendarview.CompactCalendarView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/compactcalendar_view"
        android:layout_width="fill_parent"
        android:paddingRight="10dp"
        android:paddingLeft="10dp"
        android:layout_height="230dp"
        app:compactCalendarTargetHeight="230dp"
        app:compactCalendarTextSize="13sp"
        app:compactCalendarBackgroundColor="#fcfcfc"
        app:compactCalendarTextColor="#000000"
        app:compactCalendarEventIndicatorStyle="small_indicator"
        app:compactCalendarCurrentSelectedDayBackgroundColor="#d1cbd0ce"
        app:compactCalendarCurrentDayIndicatorStyle="no_fill_large_indicator"
        app:compactCalendarCurrentDayBackgroundColor="#a11c04f9"
        app:compactCalendarMultiEventIndicatorColor="#a0eb0404"
        app:compactCalendarDisplayOtherMonthDays="true"
        app:compactCalendarCurrentSelectedDayIndicatorStyle="fill_large_indicator"
        app:compactCalendarOtherMonthDaysTextColor="#FFADADAD"

        />


        <android.support.v7.widget.RecyclerView
            android:id="@+id/eventList_recycler_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            >
        </android.support.v7.widget.RecyclerView>


       
</LinearLayout>
